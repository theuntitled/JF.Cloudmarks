<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<meta http-equiv="x-ua-compatible" content="ie=edge">

	<title>@ViewBag.Title - Cloudmarks</title>
	@Styles.Render( "~/bundles/styles" )
</head>
<body>
<nav class="ui top fixed menu">
	<div class="ui container">
		<a href="@Url.Action( "Index" , "Bookmarks" )" class="item">
			<img src="/Content/img/theuntitled-128.png">
		</a>

		<a href="@Url.Action( "Index" , "Bookmarks" )" class="item">
			<i class="remove bookmark icon"></i>
			Bookmarks
		</a>

		<a href="@Url.Action( "Index" , "Tags" )" class="item">
			<i class="tags icon"></i>
			Tags
		</a>

		<a href="@Url.Action( "Index" , "Tags" )" class="item">
			<i class="code icon"></i>
			Get the extension
		</a>

		@Html.Partial( "_LoginPartial" )
	</div>
</nav>

<div class="ui container authorized">
	@RenderBody()
</div>

@Scripts.Render( "~/bundles/scripts" )
@RenderSection( "scripts" , false )
</body>
</html>